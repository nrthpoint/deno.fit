    <script>
      // Scroll-based scale animation
      function updateImageScales() {
        const sections = document.querySelectorAll(
          ".section:not(.hero):not(.download-section)"
        );

        sections.forEach((section) => {
          const img = section.querySelector(".image-container img");
          if (!img) return;

          const rect = section.getBoundingClientRect();
          const windowHeight = window.innerHeight;

          // Calculate visibility percentage (0 to 1)
          const visibleTop = Math.max(0, -rect.top);
          const visibleBottom = Math.min(rect.height, windowHeight - rect.top);
          const visibleHeight = Math.max(0, visibleBottom - visibleTop);
          const visibilityRatio = visibleHeight / windowHeight;

          // Map visibility ratio to scale (1 to 1.05)
          const scale = 1 + visibilityRatio * 0.05;
          (img as HTMLImageElement).style.transform =
            `scale(${Math.min(1.05, Math.max(1, scale))})`;
        });
      }

      // Update on scroll
      window.addEventListener("scroll", updateImageScales);
      // Initial update
      updateImageScales();
    </script>
